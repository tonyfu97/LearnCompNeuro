% Packages
\usepackage[utf8]{inputenc}
\usepackage[top=25mm,bottom=22mm,left=17mm,right=17mm]{geometry}
\usepackage{amsmath}
\usepackage[safe]{tipa}
\usepackage{graphicx}
\usepackage{tabularx}
\usepackage{wrapfig}
\usepackage{fancyhdr}
\usepackage[export]{adjustbox}
\usepackage{titling}
